    pipeNonCouple
    {
        type wall;
        faces
        (
            (8 9 10 11)
            (9 8 12 13)
            (10 9 13 14)
            (11 10 14 15)
            (8 11 15 12)

            (24 25 26 27)
            (25 24 28 29)
            (26 25 29 30)
            (27 26 30 31)
            (24 27 31 28)

            (40 41 42 43)
            (41 40 44 45)
            (42 41 45 46)
            (43 42 46 47)
            (40 43 47 44)
