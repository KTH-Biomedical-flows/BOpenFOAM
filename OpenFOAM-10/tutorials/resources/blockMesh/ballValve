(
    inlet
    {
        type patch;
        faces
        (
            (0 1 2 3)
            (1 0 4 5)
            (2 1 5 6)
            (3 2 6 7)
            (0 3 7 4)
        );
    }
    lowerOutlet
    {
        type patch;
        faces
        (
            (16 17 18 19)
            (17 16 20 21)
            (18 17 21 22)
            (19 18 22 23)
            (16 19 23 20)
        );
    }
    upperOutlet
    {
        type patch;
        faces
        (
            (32 33 34 35)
            (33 32 36 37)
            (34 33 37 38)
            (35 34 38 39)
            (32 35 39 36)
